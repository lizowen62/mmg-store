{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./.medusa/server",
    "rootDir": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "medusa-config.ts"
  ],
  "exclude": [
    "node_modules",
    ".cache",
    ".medusa/admin",
    ".medusa/server",
    "integration-tests",
    "__tests__",
    "tests"
  ]
}